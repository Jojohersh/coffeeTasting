<%- include('../partials/header')%>
  <div class="container">
    <form class="" action="/roasters/new" method="post">
      <h1>New Roaster</h1>
      <p><strong>Roaster Name</strong></p>
      <input type="text" name="name" placeholder="Roaster Name" required>
      <div class="form-section">
        <p><strong>Address</strong></p>
        <input type="text" name="location[address]" placeholder="Street Address e.g. 123 Address st." required>
        <input type="text" name="location[city]" placeholder="City" required>
        <input type="text" name="location[state]" placeholder="State" required>
        <input type="text" name="location[country]" placeholder="Country" required>
        <input type="text" name="location[zipcode]" placeholder="Zipcode e.g. 54321" required>
      </div>
      <input type="text" name="website" placeholder="website url e.g. www.roaster.roast" required>
      <button>submit</button>
    </form>
  </div>
<%- include('../partials/footer')%>
